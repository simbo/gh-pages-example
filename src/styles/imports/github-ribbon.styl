@require 'mixins/shadow'

/**
  * "Fork me on GitHub" Ribbon
  */

$githubRibbon = {
  content: 'Fork me on GitHub',
  color: #fff,
  background: #0366d6,
  borderColor: rgba(255, 255, 255, .65),
}

.github-ribbon
  position: absolute
  top: -4px
  right: -4px
  width: 196px
  height: @width
  overflow: hidden
  line-height: 1
  font-size: 14px

  > a
    display: block
    position: absolute
    top: 120px
    right: -19px
    width: 100%
    height: 28px
    transform-origin: top right
    transform: rotate(45deg)
    background: $githubRibbon.background
    white-space: nowrap
    text-decoration: none
    text-align: center
    shadow(2)
    transition: box-shadow .2s

    &::before,
    &::after
      content: ''
      position: absolute
      top: 100%
      border-width: 2px
      border-style: solid

    &::before
      left: 0
      border-color: $githubRibbon.background transparent transparent $githubRibbon.background

    &::after
      right: 0
      border-color: $githubRibbon.background $githubRibbon.background transparent transparent

    > span

      &,
      &::before
        position: absolute
        top: 2px
        left: 0
        width: 100%
        height: 24px

      &::before
        content: $githubRibbon.content
        top: 0
        line-height: 22px
        color: #fff
        border-top: 1px dashed $githubRibbon.borderColor
        border-bottom: 1px dashed $githubRibbon.borderColor
